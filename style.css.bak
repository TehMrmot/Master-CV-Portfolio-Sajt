@import url('https://fonts.googleapis.com/css?family=Lato:400,700');

.justify-content-center

.body {
	
	overflow-x hidden;
	font-family: 'Lato', sans-serif;
	color: #505962
	
}
.navbar {

	background: rgba(0, 0, 6, 0.6);
	
}
.navbar-brand  img {
	height: 4rem;
	
} 

.caption h4 {
	text-align: justify;
	 text-justify: inter-word;
}

.video-background {
  background-color: rgba(0, 0, 0, 0.2);
}

.caption {
	position: absolute;
	top: 38%;
	width: 100%;
	color: red;
	
}

.caption h1 {
	font-size: 7rem;
	font-weight: 700;
	letter-spacing: .2rem;
	text-shadow: .1rem .1rem .8rem black;
	padding-bottom: 1rem;
}
.caption h3 {
	font-size: 3rem;
	text-shadow: .1rem .1rem .5rem black;
	padding-bottom: 1.6rem;
}

.btn lg {
	border-width: large;
	border-radius: 0;
	font-size: 1.5rem;
	padding: .6rem 1.3rem;
	
}

// BASIC

ul {
  display: flex;
  flex-wrap: wrap;
  
  
  
}

li {
  height: 40vh;
  flex-grow: 1

  
    
}

li:last-child {
  // There's no science in using "10" here. In all my testing, this delivered the best results.
  flex-grow: 10;
}

ul li{
	list-style: none;
}

img {
  max-height: 100%;
  min-width: 100%;
  object-fit: cover;
  vertical-align: bottom;
}

// ADVANCED

// Portrait

@media (max-aspect-ratio: 1/1) {
  li {
    height: 30vh;
  }
}

// Short screens

@media (max-height: 480px) {
  li {
    height: 80vh;
  }
}

// Smaller screens in portrait

@media (max-aspect-ratio: 1/1) and (max-width: 480px) {
  ul {
    flex-direction: row;
  }

  li {
    height: auto;
    width: 100%;
  }
  img {
    width: 100%;
    max-height: 75vh;
    min-width: 0;
  }
}



/*============= COURSE SECTION =============*/





.col-md-8 {
  margin: 2rem auto 8rem;
  padding-top: 2rem;
}
.col-md-8 h1 {
    font-size: 2.4rem;
  }
.btn-secondary {
  border-width: medium;
  border-radius: 0;
  padding: .6rem 1.2rem;
  font-size: 1.2rem;
  text-transform: uppercase;
  margin: 1rem;
  border-color: #1EBBA3;
  background-color: #1EBBA3;
  color: white;
}
.btn-secondary:hover,
.btn-secondary:focus {
  border-color: #189582;
  background-color: #189582;
  color: white;
}


@media (max-width: 768px) {
	.caption {
	position: absolute;
	top: 38%;
	width: 100%;
	color: white;
	
}

.caption h1 {
	font-size: 1.4rem;
	font-weight: 700;
	letter-spacing: .15rem;
	padding-bottom: .5rem
	
}
.caption h3 {
	font-size: 1.1rem;
	padding-bottom: 1.2rem;
}

.btn lg {
	
	font-size: 1rem;
	padding: .5rem 1rem;
}





	

